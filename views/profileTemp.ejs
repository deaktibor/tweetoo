<div class="container-fluid">
    <div class="row">
        <h1>Profile</h1>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="media">
                <img src="/assets/img/profil_photo_placeholder.png" width="200" height="200" class="rounded float-start img-fluid" alt="/assets/img/profil_photo_placeholder.png">
            </div>
            <div class="row d-flex text-center g-3" >
                <form action="">
                    <button class="btn btn-warning">
                        <i class="far fa-edit"></i>
                    </button>
                    <button class="btn btn-danger">
                        <i class="far fa-trash-alt"></i>
                    </button>
                </form>
            </div>

        </div>
        <div class="col-8">
            <p><h3>Nickname: <%= user.nickname%></h3></p>
            <p><h3>Email: <%= user.email%></h3></p>

        </div>
    </div>
    <div class="row d-flex justify-content-center text-center">
        <div class="col  g-5 mx-auto">
            <a href="/profile/editmail">
                <button class="btn btn-primary">Change email</button>
            </a>
        </div>
        <div class="col g-5 mx-auto">
            <a href="/profile/editpass">
                <button class="btn btn-primary">Change password</button>
            </a>
        </div>
    </div>

</div>
