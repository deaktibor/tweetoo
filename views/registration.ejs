<!doctype html>
<html lang="en">

    <!--header-->
    <%- include('header'); %>

<body class="main-body">
    <div class="container bg-light">
        <div class="row">
            <div class="d-flex justify-content-center">
                <div class="col-12 col-md-4 reg-box">
                    <div class="mb-3 text-center">
                        <h1>Registration</h1>
                    </div>
                    <form action="/reg" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" >
                        </div>
                        <div class="mb-3">
                            <label for="regPasswordInput" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" id="regPasswordInput">
                        </div>
                        <div class="mb-3">
                            <label for="regNickname" class="form-label">Nickname</label>
                            <input type="text" name="nickname" class="form-control" id="regNickname">
                        </div>
                        <div class="row">
                            <div class="col text-center mb-3">
                                <button type="submit" class="btn btn-primary">Registration</button>
                            </div>
                            <div class="col text-center mb-3">
                                <a class="btn btn-danger" href="/" role="button">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Alert render-->
        <% if (locals.rendAlert) { %>
            <div class="d-flex justify-content-center">
                <div class="alert <%= locals.rendAlert.type %>" role="alert">
                    <%= locals.rendAlert.message%>
                </div>
            </div>
        <% } %>
    </div>

    <!--footer-->
    <%- include('footer'); %>

</body>
</html>


