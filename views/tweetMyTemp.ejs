<!--   My Tweet Template-->
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-2">
            <i class="fas fa-user fa-3x" style="margin: 20px 10px 10px 10px;"></i>
        </div>
        <div class="col-md-10">
            <div class="card-body">
                <div class="row">
                    <div class="col-6 text-start">
                        <h5 class="card-title"><p class="fw-bold"><%= user.nickname%></p></h5>
                    </div>
                    <div class="col-6 text-end">
                        <h6 class="card-title">
                            <p class="fw-lighter">
                                <% if (tweet.isPublic === true) { %>
                                    <%= new Date(tweet.publicTimestamp).toLocaleDateString("en-US",
                                            {dateStyle: "short",timeStyle: "short", hourCycle: "h24"})%>
                                <% }else { %>
                                        <%= new Date(tweet.meta.created).toLocaleDateString("en-US",
                                                {dateStyle: "short",timeStyle: "short", hourCycle: "h24"})%>
                                 <%} %>
                            </p>
                        </h6>
                    </div>
                </div>
                <p class="card-text"><%= tweet.text%></p>
                <div class="row">
                    <div class="col-6 text-start">
                    </div>
                    <div class="col-6 text-end">
                    <% if (tweet.isPublic === true) { %>
                            <button type="submit" class="btn btn-love"><%= tweet.loveCount%><i class="far fa-heart"></i></button>
                        <a href="/tweet/del/<%= tweet.id%>" class="btn btn-outline-danger">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    <% }else { %>
                        <a href="/tweet/edit/<%= tweet.id%>" class="btn btn-outline-primary">
                            <i class="far fa-edit"></i>
                        </a>
                        <a href="/tweet/del/<%= tweet.id%>" class="btn btn-outline-danger">
                            <i class="far fa-trash-alt"></i>
                        </a>
                        <a href="/tweet/public/<%= tweet.id%>" class="btn btn-outline-success">
                            <i class="fas fa-globe-americas"></i>
                        </a>
                    <%} %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
