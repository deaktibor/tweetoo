<!doctype html>
<html lang="en">

<!--header-->
<%- include('header'); %>

<body class="main-body">
<div class="container bg-light">
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-12 col-lg-4">
                <div class="reg-box">
                    <div class="mb-3 text-center">
                        <h1>Change password</h1>
                    </div>

                    <form>
                        <div class="mb-3">
                            <label for="oldPasswordInput" class="form-label">Old password</label>
                            <input type="password" class="form-control" id="oldPasswordInput">
                        </div>
                        <div class="mb-3">
                            <label for="new1PasswordInput" class="form-label">New password</label>
                            <input type="password" class="form-control" id="new1PasswordInput">
                        </div>
                        <div class="mb-3">
                            <label for="new2PasswordInput" class="form-label">New password</label>
                            <input type="password" class="form-control" id="new2PasswordInput">
                        </div>
                        <div class="row mb-3">
                            <div class="col text-center">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                            <div class="col text-center">
                                <button type="reset" class="btn btn-danger">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4"></div>
    </div>
</div>

<!--footer-->
<%- include('footer'); %>

</body>
</html>
