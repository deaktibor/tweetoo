<!--    Tweet Template-->
<% locals.tweets.forEach(function(tweet){ %>
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-1">
                <i class="fas fa-user fa-3x" style="margin: 20px 10px 10px 10px;"></i>
            </div>
            <div class="col-md-11">
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 text-start">
                            <h5 class="card-title"><p class="fw-bold"><%= tweet.nickname%></p></h5>
                        </div>
                        <div class="col-6 text-end">
                            <h6 class="card-title">
                                <p class="fw-lighter">
                                    <%= new Date(tweet.publicTimestamp).toLocaleDateString("en-US",
                                            {dateStyle: "short",timeStyle: "short", hourCycle: "h24"})%>
                                </p>
                            </h6>
                        </div>
                    </div>
                    <p class="card-text"><%= tweet.text%></p>
                    <div class="row">
                        <div class="col-6 text-start">
                        </div>
                        <div class="col-6 text-end">
                            <button type="button" class="btn btn-link btn-love"><i class="far fa-heart"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% }); %>
