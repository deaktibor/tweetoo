<!--    Main Tweet Template-->
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-2">
            <i class="fas fa-user fa-3x" style="margin: 20px 10px 10px 10px;"></i>
        </div>
        <div class="col-md-10">
            <div class="card-body">
                <div class="row">
                    <div class="col-6 text-start">
                        <h5 class="card-title"><p class="fw-bold"><%= tweet.user.nickname%></p></h5>
                    </div>
                    <div class="col-6 text-end">
                        <h6 class="card-title">
                            <p class="fw-lighter">
                                <%= new Date(tweet.publicTimestamp).toLocaleDateString("en-US",
                                        {dateStyle: "short",timeStyle: "short", hourCycle: "h24"})%>
                            </p>
                        </h6>
                    </div>
                </div>
                <p class="card-text"><%= tweet.text%></p>
                <div class="row">
                    <div class="col-9 text-start">
                    </div>
                    <div class="col-1 d-flex align-items-center btn-love">
                        <%= tweet.loveCount%>
                    </div>
                    <div class="col-2 d-flex align-items-center btn-love">
                        <% if (tweet.isLoved) { %>
                        <form action="/tweet/love/<%= tweet.id%>" method="post">
                            <button type="submit" class="btn btn-link btn-love"><i class="fas fa-heart"></i></button>
                        </form>
                        <% } else { %>
                        <form action="/tweet/love/<%= tweet.id%>" method="post">
                            <button type="submit" class="btn btn-link btn-love"><i class="far fa-heart"></i></button>
                        </form>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
